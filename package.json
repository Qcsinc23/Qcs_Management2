{
  "name": "qcs-management-app",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "lint:strict": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:css": "stylelint \"src/**/*.css\" \"src/**/*.scss\" --fix",
    "lint:css:fix": "stylelint \"src/**/*.css\" \"src/**/*.scss\" --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,css,scss}\"",
    "prepare": "husky install",
    "security:audit": "npm audit",
    "security:outdated": "npm outdated",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clerk/backend": "^1.21.4",
    "@clerk/clerk-react": "^5.22.10",
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/react": "^6.1.15",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@mui/icons-material": "^6.3.1",
    "@mui/material": "^6.3.1",
    "@mui/x-data-grid": "^7.23.5",
    "@stripe/react-stripe-js": "^3.1.1",
    "@stripe/stripe-js": "^5.4.0",
    "@supabase/storage-js": "^2.7.1",
    "@supabase/supabase-js": "^2.47.11",
    "chart.js": "^4.4.7",
    "date-fns": "^4.1.0",
    "firebase": "^11.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.344.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-hot-toast": "^2.5.1",
    "react-router-dom": "^7.1.1",
    "react-signature-canvas": "^1.0.7",
    "zod": "^3.24.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.0.0",
    "@eslint-react/eslint-plugin": "^1.26.1",
    "@eslint/js": "^9.9.1",
    "@types/express": "^5.0.0",
    "@types/lodash": "^4.17.15",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.19.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-security": "^2.1.0",
    "globals": "^15.9.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "stylelint": "^16.14.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-csp": "^1.1.2",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^1.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run lint:strict"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
